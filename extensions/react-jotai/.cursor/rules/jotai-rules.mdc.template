        user.lastName.toLowerCase().includes(search) ||
        user.email.toLowerCase().includes(search)
      )
    }), [debouncedQuery])
  )

  return {
    query,
    debouncedQuery,
    results: searchResults,
    setQuery,
    isSearching: query !== debouncedQuery,
  }
}


export class ProxyUserCollection {
  users = proxyMap<string, User>()
  indices = {
    byEmail: proxyMap<string, string>(),
    byRole: proxyMap<string, Set<string>>(),
    byStatus: proxyMap<boolean, Set<string>>(),
  }
  
